package lift;

public class Monitor {
	
	private int here, next;
	private int[] waitEntry;
	private int[] waitExit;
	private int load;
	private LiftView lv;
	
	
	public Monitor(LiftView lv){
		here = 0;
		next = 1;
		waitEntry = new int[7];
		waitExit = new int[7];
		load = 0;
		this.lv = lv;
		
	}

	public void enteredFloor(int floor) {
		waitEntry[floor]++;
		lv.drawLevel(floor, waitEntry[floor]);
	}
	
	public boolean canEnter(int floor){
		return load<4&&next==here&&floor==here;
	}

	public void enteredLift(int nextFloor){
		waitEntry[here]--;
		waitExit[nextFloor]++;
		lv.drawLevel(here, waitEntry[here]);
		load++;
		lv.drawLift(here, load);
	}
	
	public void exitLift(){
		waitExit[here]--;
		load--;
		lv.drawLift(here, load);
	}
	
	public void moveLift(){
		
	}
	
}
